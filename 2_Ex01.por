programa {
  funcao inicio() {
    
    inteiro num

    escreva("Digite um numero: ")
    leia(num)

    se(num % 2 == 0)
      escreva("O número ", num, " é par ")
    senao        
      escreva("O número ", num, " é impar ")
    
    se(num >= 0)
      escreva(" e positivo.")
    senao
      escreva(" e negativo")


  }
}
